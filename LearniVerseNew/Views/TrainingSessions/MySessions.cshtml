@model IEnumerable<LearniVerseNew.Models.ApplicationModels.Trainer_Models.TrainingSession>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <strong>Success:</strong> @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}
<h2>My Training Sessions</h2>

<!-- Link to available sessions -->
<div class="mb-3">
    <a href="@Url.Action("AvailableSessions", "TrainingSessions")" class="btn btn-success">Browse Available Sessions</a>
   
    <a href="@Url.Action("MyAllSessions", "TrainingSessions")" class="btn btn-success">View All Your Sessions</a>
    
</div>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Session Name</th>
            <th>Trainer</th>
            <th>Session Date</th>
            <th>Start Time</th>
            <th>Duration</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Any())
        {
            foreach (var session in Model)
            {
                <tr>
                    <td>@session.SessionName</td>
                    <td>@session.Trainer.FirstName @session.Trainer.LastName</td>
                    <td>@session.SessionDate.ToString("MM/dd/yyyy")</td>
                    <td>@session.SessionStart</td>
                    <td>@session.Duration minutes</td>
                    <td>
                        <!-- Add Cancel button -->
                        @using (Html.BeginForm("CancelSession", "TrainingSessions", FormMethod.Post))
                        {
                            @Html.AntiForgeryToken()
                            @Html.Hidden("sessionId", session.TrainingSessionID)
                            <button type="submit" class="btn btn-danger">Cancel</button>
                        }
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="6">You have not joined any sessions yet.</td>
            </tr>
        }
    </tbody>
</table>
