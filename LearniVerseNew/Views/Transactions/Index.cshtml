@model IEnumerable<LearniVerseNew.Models.ApplicationModels.Store_Models.Transaction>

@{
    ViewBag.Title = "Transactions";
}

<h2>Transactions</h2>

<!-- Search Form -->
<div class="mb-3">
    @using (Html.BeginForm("Index", "Transactions", FormMethod.Get))
    {
        <div class="input-group">
            @Html.TextBox("searchString", ViewBag.CurrentFilter as string, new { @class = "form-control", placeholder = "Search by Student ID or Reference" })
            <button class="btn btn-outline-dark" type="submit">
                <i class="bi bi-search"></i> Search
            </button>
        </div>
    }
</div>

<!-- Transactions Table -->
<table class="table table-striped table-bordered">
    <thead class="thead-dark">
        <tr>
            <th>@Html.DisplayNameFor(model => model.Order.StudentID)</th>
            <th>
                @Html.ActionLink("Amount", "Index", new { sortOrder = ViewBag.AmountSortParm })
                @if (ViewBag.AmountSortParm == "")
                {
                    <i class="bi bi-arrow-down"></i>
                }
                else
                {
                    <i class="bi bi-arrow-up"></i>
                }
            </th>
            <th>
                @Html.ActionLink("Status", "Index", new { sortOrder = ViewBag.StatusSortParm })
                @if (ViewBag.StatusSortParm == "status_asc")
                {
                    <i class="bi bi-arrow-down"></i>
                }
                else
                {
                    <i class="bi bi-arrow-up"></i>
                }
            </th>
            <th>
                @Html.ActionLink("Transaction Date", "Index", new { sortOrder = ViewBag.DateSortParm })
                @if (ViewBag.DateSortParm == "date_asc")
                {
                    <i class="bi bi-arrow-down"></i>
                }
                else
                {
                    <i class="bi bi-arrow-up"></i>
                }
            </th>
            <th>
                @Html.ActionLink("Type", "Index", new { sortOrder = ViewBag.TypeSortParm }) <!-- New column for type sorting -->
                @if (ViewBag.TypeSortParm == "type_asc")
                {
                    <i class="bi bi-arrow-down"></i>
                }
                else
                {
                    <i class="bi bi-arrow-up"></i>
                }
            </th>
            <th>Reference</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Order.StudentID)</td>
                <td>@Html.DisplayFor(modelItem => item.Amount)</td>
                <td>@Html.DisplayFor(modelItem => item.Status)</td>
                <td>@Html.DisplayFor(modelItem => item.TransactionDate)</td>
                <td>@Html.DisplayFor(modelItem => item.TransactionType)</td> <!-- Display the transaction type -->
                <td>@Html.DisplayFor(modelItem => item.PaystackReference)</td>
                <td>
                    <!-- Button with Icon for Viewing Details -->
                    <a href="@Url.Action("Details", new { id = item.TransactionID })" class="btn btn-outline-info">
                        <i class="bi bi-info-circle"></i> Details
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
