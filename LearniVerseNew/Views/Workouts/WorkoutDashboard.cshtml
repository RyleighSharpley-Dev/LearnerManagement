@using LearniVerseNew.Models.ApplicationModels.Regimen_Models;
<div class="container">
    @if (ViewBag.Student != null)
    {
        <div class="card mb-4">
            <div class="card-header bg-danger-subtle">
                <h4>@ViewBag.Student.StudentFirstName's Workouts</h4>
            </div>
            <div class="card-body">
                @if (ViewBag.Regimen != null)
                {
                    <div class="card mb-4">
                        <div class="card-header bg-danger-subtle">
                            <h4>@ViewBag.Regimen.Name</h4>
                            <p><strong>Created on:</strong> @ViewBag.Regimen.DateCreated.ToShortDateString()</p>
                            <a href="@Url.Action("CreateRegimen", "Workouts")" class="btn btn-primary btn-sm mb-2">
                                New Regimen
                            </a>
                        </div>
                        <div class="card-body">
                            @if (ViewBag.Workouts != null && ViewBag.Workouts.Count > 0)
                            {
                                <div class="row">
                                    @foreach (var dayGroup in ((IEnumerable<Workout>)ViewBag.Workouts)
                                        .GroupBy(w => w.DayOfWeek)
                                        .OrderBy(g => g.Key))
                                    {
                                        <div class="col-md-4 mb-4">
                                            <div class="card">
                                                <div class="card-header bg-danger-subtle">
                                                    <h5>@dayGroup.Key</h5>
                                                </div>
                                                <div class="card-body">
                                                    @foreach (var workout in dayGroup)
                                                    {
                                                        <h6>@workout.Name</h6>
                                                        <p><strong>Times Trained:</strong> @workout.TimesTrained</p>

                                                        <a href="@Url.Action("ViewWorkout", "Workouts", new { id = workout.WorkoutID })" class="btn btn-primary btn-sm mb-2">
                                                            View Workout
                                                        </a>

                                                        <ul class="list-group">
                                                            @foreach (var exercise in workout.Excercises)
                                                            {
                                                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                                                    @exercise.Name - @exercise.Sets sets x @exercise.Reps reps
                                                                    <button type="button" class="btn btn-danger btn-sm" data-bs-toggle="modal" data-bs-target="#instructionsModal-@exercise.ExceciseID">
                                                                        Info
                                                                    </button>
                                                                </li>
                                                            }
                                                        </ul>
                                                    }
                                                </div>
                                            </div>
                                        </div>
                                    }
                                </div>
                            }
                            else
                            {
                        <div class="alert alert-info">
                            No workouts found in this regimen.
                            
                        </div>
                        <div class="col-1">
                            <a href="@Url.Action("CreateWorkout", "Workouts")" class="btn btn-primary btn-sm">Add Workout</a>
                        </div>
                            }
                        </div>
                    </div>
                }
                else
                {
                    <div class="alert alert-info">
                        No regimen found for this student.
                    </div>
                }
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-info">
            Student not found.
        </div>
    }

    <!-- Modals for Instructions -->
    @if (ViewBag.Workouts != null)
    {
        foreach (var workout in (IEnumerable<Workout>)ViewBag.Workouts)
        {
            foreach (var exercise in workout.Excercises)
            {
                <div class="modal fade" id="instructionsModal-@exercise.ExceciseID" tabindex="-1" aria-labelledby="instructionsModalLabel-@exercise.ExceciseID" aria-hidden="true">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="instructionsModalLabel-@exercise.ExceciseID">@exercise.Name - Instructions</h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                            </div>
                            <div class="modal-body">
                                <p>@exercise.Instructions</p>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
    }
</div>
