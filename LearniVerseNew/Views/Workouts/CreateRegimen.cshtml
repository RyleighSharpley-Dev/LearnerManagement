@model LearniVerseNew.Models.ApplicationModels.Regimen_Models.Regimen

@{
    ViewBag.Title = "Create Workout";
}

<h2>Create Workout</h2>

@using (Html.BeginForm("CreateRegimen", "Workouts", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()

<div class="form-group">
    @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-2" })
    <div class="col-md-10">
        @Html.TextBoxFor(model => model.Name, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
    </div>

    <div class="col-md-10 mt-2">
        <p>Attendance Goal</p>
        @Html.TextBoxFor(model => model.AttendanceGoal, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.AttendanceGoal, "", new { @class = "text-danger" })
    </div>
</div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10 mt-2">
            <input type="submit" value="Create Regimen" class="btn btn-primary" />
        </div>
    </div>
}
