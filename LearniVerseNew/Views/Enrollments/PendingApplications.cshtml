@model List<LearniVerseNew.Models.ApplicationModels.Enrollment>

@{
    ViewBag.Title = "Pending Enrollments";
}

@if (ViewData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @ViewData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<h2>Pending Enrollments</h2>

@if (Model.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>Student Name</th>
                <th>Enrollment Date</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var enrollment in Model)
            {
                <tr>
                    <td>@enrollment.Student.StudentFirstName @enrollment.Student.StudentLastName</td>
                    <td>@enrollment.EnrollmentDate.ToString("yyyy-MM-dd")</td>
                    <td>
                        @using (Html.BeginForm("ReviewEnrollment", "Enrollments", new { id = enrollment.EnrollmentID }, FormMethod.Post))
                        {
                            @Html.AntiForgeryToken()
                            <button type="submit" class="btn btn-success">Review</button>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No pending enrollments found.</p>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
