@model LearniVerseNew.Models.ApplicationModels.ViewModels.EnrolViewModel
@{
    ViewBag.Title = "Select Faculty";
}



@using (Html.BeginForm("SelectFaculty", "Enrollments"))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h1>Select Faculty</h1>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="row">
            <div class="col-md-12">
                <h2>Welcome, @Model.StudentFirstName @Model.StudentLastName!</h2>
                <p>Please select a faculty to continue.</p>
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.SelectedFaculty, "Select Faculty:", htmlAttributes: new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.SelectedFaculty, new SelectList(Model.AvailableFaculties, "FacultyID", "FacultyName"), "Please select", new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.SelectedFaculty, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10 mt-2">
                <input type="submit" value="Continue" class="btn btn-success" />
            </div>
        </div>
    </div>
}

<div class="mt-3">
    <a href="@Url.Action("Home", "Students")" class="btn btn-secondary">Back Home</a>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

