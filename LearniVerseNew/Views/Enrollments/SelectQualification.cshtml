@model LearniVerseNew.Models.ApplicationModels.ViewModels.EnrolViewModel
@{
    ViewBag.Title = "Select Qualification";
}

<div class="container mt-5">
    @using (Html.BeginForm("SelectQualification", "Enrollments"))
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <h1 class="text-center mb-4">Select Qualification</h1>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "alert alert-danger" })

            <div class="form-group">
                <div class="col-md-10 offset-md-1">
                    <h4>Please select a qualification:</h4>
                    @Html.DropDownListFor(model => model.SelectedQualificationID, new SelectList(Model.AvailableQualifications, "QualificationID", "Name"), "Select Your Qualification", new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.SelectedQualificationID, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group text-center">
                <div class="col-md-12">
                    <input type="submit" value="Continue" class="btn btn-success btn-lg" />
                </div>
            </div>
        </div>
    }

    <div class="text-center mt-4">
        <a href="@Url.Action("SelectFaculty")" class="btn btn-secondary btn-lg">Back to Faculty Selection</a>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
