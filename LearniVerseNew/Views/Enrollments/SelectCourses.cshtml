@model LearniVerseNew.Models.ApplicationModels.ViewModels.EnrolViewModel
@{
    ViewBag.Title = "Select Courses";
}

<h2>Select Courses</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Please select courses:</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <div class="col-md-10">
                @Html.ListBoxFor(model => model.SelectedCourseIDs, new SelectList(Model.AvailableCourses, "CourseID", "CourseName"), new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.SelectedCourseIDs, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10 mt-2">
                <input type="submit" value="Next" class="btn btn-success" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to Qualification Selection", "SelectQualification")
</div>


