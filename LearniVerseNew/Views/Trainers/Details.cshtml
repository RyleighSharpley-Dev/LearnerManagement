@model LearniVerseNew.Models.ApplicationModels.Trainer_Models.Trainer

@{
    ViewBag.Title = "Trainer Details";
}

<h2>Trainer Details</h2>

<div class="card shadow-sm">
    <div class="card-body">
        <h4 class="card-title">@Model.FirstName @Model.LastName</h4>
        <hr />

        <p><strong>Email:</strong> @Model.Email</p>
        <p><strong>Phone Number:</strong> @Model.PhoneNumber</p>
        <p><strong>Specialization:</strong> @Model.Specialization</p>

        <div class="mt-3">
            @Html.ActionLink("Edit", "Edit", new { id = Model.TrainerID }, new { @class = "btn btn-primary" }) |
            @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-secondary" })
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
