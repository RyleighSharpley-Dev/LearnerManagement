@model LearniVerseNew.Models.ApplicationModels.Gym_Models.BodyComposistion

@{
    ViewBag.Title = "New Composition";
}

<h2>New Composition</h2>

<!-- Display Student Details -->
<div class="card mb-4">
    <div class="card-header">
        <h4>Student Details</h4>
    </div>
    <div class="card-body">
        <p><strong>Student ID:</strong> @ViewBag.Student.StudentID</p>
        <p><strong>Name:</strong> @ViewBag.Student.StudentFirstName @ViewBag.Student.StudentLastName</p>
        <p><strong>Email:</strong> @ViewBag.Student.StudentEmail</p>
        <p><strong>Date of Birth:</strong> @ViewBag.Student.DOB.ToShortDateString()</p>
        <p><strong>Gender:</strong> @ViewBag.Student.Gender</p>
    </div>
</div>

<!-- Form to Input Body Composition Data -->
@using (Html.BeginForm("NewComposition", "BodyComposistions", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <div class="form-group">
        @Html.LabelFor(model => model.Height, "Height (in meters)")
        @Html.TextBoxFor(model => model.Height, new { @class = "form-control", @placeholder = "Enter height in meters" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Weight, "Weight (in kg)")
        @Html.TextBoxFor(model => model.Weight, new { @class = "form-control", @placeholder = "Enter weight in kilograms" })
    </div>
    <button type="submit" class="btn btn-primary">Calculate and Save</button>
}

<!-- Script Section -->
@section Scripts {
    <script>
        $(document).ready(function () {
            // Replace periods with commas in input fields
            $("input").on("input", function () {
                var value = $(this).val();
                value = value.replace('.', ',');
                $(this).val(value);
            });
        });
    </script>
}
