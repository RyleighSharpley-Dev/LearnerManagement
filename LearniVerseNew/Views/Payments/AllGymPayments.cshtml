@model IEnumerable<LearniVerseNew.Models.ApplicationModels.Gym_Models.MembershipPayment>

@{
    ViewBag.Title = "All Gym Payments";
}

<div class="container mt-5">
    <h2 class="mb-4">Gym Payments</h2>

    <!-- Search Form -->
    <form method="get" action="@Url.Action("AllGymPayments", "Payments")" class="form-inline mb-4">
        <input type="text" name="email" class="form-control mr-2 mb-2" placeholder="Search by Student Email" value="@Request.QueryString["email"]" />
        <button type="submit" class="btn btn-primary">Search</button>
    </form>

    @if (!Model.Any())
    {
        <div class="alert alert-info" role="alert">
            No payments available.
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>Plan Name</th>
                        <th>Student Name</th>
                        <th>Membership Tier</th>
                        <th>Amount</th>
                        <th>Transaction Date</th>
                        <th>Status</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Membership.Plan.PlanName</td>
                            <td>@item.Student.StudentFirstName @item.Student.StudentLastName</td>
                            <td>@item.Membership.MembershipTier</td>
                            <td>@item.Amount.ToString("C")</td>
                            <td>@item.TransactionDate.ToShortDateString()</td>
                            <td>@item.Status</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>
